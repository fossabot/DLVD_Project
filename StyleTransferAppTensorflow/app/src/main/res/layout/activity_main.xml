<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.example.etienne.styletransferapptensorflow.MainActivity">

    <ImageButton
            android:src="@drawable/ic_photo_camera_black_48dp"
            android:background="@android:color/transparent"
            android:translationZ="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoButton"
            android:layout_weight="0.29"
            android:layout_marginTop="79dp"
            android:layout_below="@+id/imageView" android:layout_centerHorizontal="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_switch_camera_black_48dp"
            android:background="@android:color/transparent"
            android:translationZ="10dp"
            android:id="@+id/switchButton"
            android:layout_alignTop="@+id/photoButton" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_back_black_48dp"
            android:layout_above="@+id/listView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginBottom="34dp" android:id="@+id/backButton"/>
    <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cat"
            android:layout_marginTop="106dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true" android:layout_alignLeft="@+id/photoButton"
            android:layout_alignStart="@+id/photoButton" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextureView
            android:layout_width="match_parent"
            android:id="@+id/textureView"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_height="match_parent"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="10dp"
            android:id="@+id/listView" android:clipToPadding="false"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_below="@+id/photoButton"/>
</RelativeLayout>
