<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"


        android:id="@+id/activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/LightBlue"
        tools:context="com.example.etienne.styletransferapptensorflow.MainActivity">

    <ImageView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/cat" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="107dp"
            android:id="@+id/imageView"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextureView
                android:layout_width="match_parent"
                android:id="@+id/textureView"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_height="410dp"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/listView" android:clipToPadding="false" android:layout_height="1053dp"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_marginBottom="100dp"/>
    </LinearLayout>
    <ImageButton
            android:src="@drawable/ic_photo_camera_black_48dp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photoButton"
            android:layout_weight="0.29"
            android:layout_marginTop="79dp"
            android:layout_below="@+id/imageView" android:layout_centerHorizontal="true"/>

</RelativeLayout>
